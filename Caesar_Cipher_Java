import java.util.Scanner;

public class Main {

    // Encrypts text using Caesar cipher
    public static String encrypt(String text, int shift) {
        StringBuilder result = new StringBuilder();

        for (char ch : text.toCharArray()) {
            if (Character.isLetter(ch)) {
                char base = Character.isUpperCase(ch) ? 'A' : 'a';
                int offset = (ch - base + shift) % 26;
                if (offset < 0) offset += 26; // handle negative shifts
                result.append((char)(base + offset));
            } else {
                result.append(ch);
            }
        }

        return result.toString();
    }

    // Decrypts text using Caesar cipher
    public static String decrypt(String text, int shift) {
        return encrypt(text, -shift);
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Caesar Cipher Encoder/Decoder");
        System.out.print("Enter a message: ");
        String message = scanner.nextLine();

        System.out.print("Enter a shift value: ");
        int shift = scanner.nextInt();

        String encrypted = encrypt(message, shift);
        String decrypted = decrypt(encrypted, shift);
        
        System.out.println();
        
        System.out.println("Encrypted Message: " + encrypted);
        System.out.println("Decrypted Message: " + decrypted);
    }
}
